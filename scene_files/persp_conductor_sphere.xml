<?xml version="1.0" encoding="utf-8"?>
<scene version="0.5.0" id="scene">
    <!-- Spheric conductor object definition -->
    <shape type="sphere">
        <!-- Sphere's radius -->
        <float name="radius" value="6." />
        <transform name="toWorld">
            <scale x="0.4" y="0.4" z="0.4" />
        </transform>
        <bsdf type="roughconductor">
            <string name="material" value="Ag" /> <!-- Conductor's material properties conductor -->
        </bsdf>
    </shape>
    <!-- Integrator definition -->
    <integrator type="stokes">
        <integrator type="aov">
            <string name="aovs" value="nn:geo_normal,pos:position" />
            <integrator type='path'>
                <integer name="max_depth" value="17" />
            </integrator>
        </integrator>
    </integrator>

    <!-- light source -->
    <!-- <emitter type="constant">
        <spectrum name="radiance" value="1.0" />
    </emitter> -->

    <!-- Higher intensity for conductor materials -->
    <emitter type="point">
        <spectrum name="intensity" value="200000000" />
        <point name="position" x="100." y="100.0" z="100." />
    </emitter>

    <!-- perspective Sensor definition -->
    <sensor type="perspective">
        <!-- <float name="fov" value="$fov" /> -->
        <transform name="toWorld">
            <lookat origin="0, 0, 13." target="0, 0, 0" up="0, 1, 0" />
            <rotate x="0.0" y="1.0" z="0.0" angle="$angle" />
            <rotate x="1.0" y="0.0" z="0.0" angle="$tilt" />
        </transform>
        <film type="hdrfilm">
            <rfilter type="gaussian">
                <float name="stddev" value="0.8" />
            </rfilter>
            <integer name="width" value="$camera_width" />
            <integer name="height" value="$camera_height" />
            <string name="pixel_format" value="luminance" />
        </film>
        <sampler type="multijitter">
            <integer name="sample_count" value="$sample_count" />
        </sampler>
    </sensor>

</scene>