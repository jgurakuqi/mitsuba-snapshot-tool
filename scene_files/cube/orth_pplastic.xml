<?xml version="1.0" encoding="utf-8"?>
<scene version="3.0.0">

    <!-- Conductor cube -->
    <shape type="cube">
        <transform name="to_world">
            <!-- <scale x="0.3" y="0.3" z="0.3" /> -->
            <scale x="0.4" y="0.4" z="0.4" />
        </transform>
        <bsdf type="pplastic">
            <!-- specular reflectance is 1. by default -->
            <!-- <rgb name="diffuse_reflectance" value="0.05, 0.03, 0.1" /> -->
            <rgb name="specular_reflectance" value="$specular" />
            <rgb name="diffuse_reflectance" value="$diffuse" />
            <float name="alpha" value="0.06" />
        </bsdf>
    </shape>

    <!-- Integrator definition -->
    <integrator type="stokes">
        <integrator type="aov">
            <string name="aovs" value="nn:geo_normal,pos:position" />
            <integrator type='path'>
                <integer name="max_depth" value="17" />
            </integrator>
        </integrator>
    </integrator>

    <!-- light source -->
    <emitter type="point">
        <spectrum name="intensity" value="2000000" />
        <point name="position" x="100." y="100.0" z="1000." />
    </emitter>

    <!-- Orthographic Sensor definition -->
    <sensor type="orthographic">
        <transform name="to_world">
            <lookat target='0, 0, 0' origin='5, 5, 5' up='0, 1, 0' />
            <!-- <lookat origin="0, 0, 0." target="0, 0, -10" up="0, 1, 0" /> -->
            <rotate x="0.0" y="1.0" z="0.0" angle="$angle" />
        </transform>
        <film type="hdrfilm">
            <rfilter type="gaussian">
                <float name="stddev" value="0.8" />
            </rfilter>
            <integer name="width" value="$camera_width" />
            <integer name="height" value="$camera_height" />
            <string name="pixel_format" value="luminance" />
        </film>
        <sampler type="multijitter">
            <integer name="sample_count" value="$sample_count" />
        </sampler>
    </sensor>

</scene>