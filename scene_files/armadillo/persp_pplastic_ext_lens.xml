<?xml version="1.0" encoding="utf-8"?>
<scene version="0.5.0">
    <!-- Pplastic Dragon -->
    <shape type="ply">
        <string name="filename" value="armadillo_bin_resc_rot.ply" />
        <boolean name="flip_normals" value="false" />
        <transform name="to_world">
            <!-- The armadillo is gigantic! -->
            <scale x="2.7" y="2.7" z="2.7" />
            <!-- Move the armadillo a little down -->
            <translate y="-0.08" />
        </transform>
        <bsdf type="pplastic">
            <!-- specular reflectance is 1. by default -->
            <rgb name="diffuse_reflectance" value="0.05, 0.03, 0.1" />
            <float name="alpha" value="0.2" />
        </bsdf>
    </shape>

    <!-- Integrator definition -->
    <integrator type='path'>
        <integer name="max_depth" value="17" />
    </integrator>


    <!-- Light source -->
    <emitter type="point">
        <spectrum name="intensity" value="2000000" />
        <point name="position" x="90." y="90.0" z="75." />
    </emitter>

    <!-- Polarized Lens -->
    <shape type="sphere">
        <point name="center" x="0" y="-0.3" z="0.9" />
        <float name="radius" value="2" />
        <transform name="toWorld">
            <!-- lens shape -->
            <scale x="1." y="1." z="-0.01" />
            <!-- Placed in front of the camera -->
            <!-- <translate x="0" y="-0.3" z="0.9" /> -->
        </transform>
        <bsdf type="dielectric">
            <float name="intIOR" value="1.0" />
            <float name="extIOR" value="1.5" />
        </bsdf>
    </shape>

    <!-- perspective Sensor definition -->
    <sensor type="perspective">
        <!-- <float name="fov" value="90" /> -->
        <transform name="toWorld">
            <!-- 1.2 to give a slightly skewed view from down -->
            <lookat origin="0, -0.3, 1." target="0, 0, 0" up="0, 1, 0" />
            <rotate x="0.0" y="1.0" z="0.0" angle="$angle" />
            <rotate x="1.0" y="0.0" z="0.0" angle="$tilt" />
        </transform>
        <film type="hdrfilm">
            <rfilter type="gaussian">
                <float name="stddev" value="0.8" />
            </rfilter>
            <integer name="width" value="$camera_width" />
            <integer name="height" value="$camera_height" />
            <string name="pixel_format" value="luminance" />
        </film>
        <sampler type="multijitter">
            <integer name="sample_count" value="$sample_count" />
        </sampler>
    </sensor>

</scene>